<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddScoreFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add Score Detail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16dp" />


            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.kredivation.aakhale.components.CircleImageView
                    android:id="@+id/teameImage"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"
                    app:srcCompat="@drawable/noimage" />

                <TextView
                    android:id="@+id/teamName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:padding="@dimen/_5dp"
                    android:text="Team Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                app:cardElevation="@dimen/_6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="Batsman Score"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Batsman 1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />

                        <Spinner
                            android:id="@+id/batSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5dp"
                            android:gravity="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/gray" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3dp">

                        <ImageView
                            android:id="@+id/run1"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_one"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/run2"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_two"
                            tools:ignore="VectorDrawableCompat" />


                        <ImageView
                            android:id="@+id/run3"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_three"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/run4"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_four"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/run6"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_six"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/run5"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_five"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Batsman 2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12dp" />

                        <Spinner
                            android:id="@+id/bat2Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5dp"
                            android:gravity="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/gray" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3dp">

                        <ImageView
                            android:id="@+id/bat2run1"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_one"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/bat2run2"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_two"
                            tools:ignore="VectorDrawableCompat" />


                        <ImageView
                            android:id="@+id/bat2run3"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_three"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/bat2run4"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_four"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/bat2run6"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="@dimen/_45dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_six"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/bat2run5"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_five"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                app:cardElevation="@dimen/_6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="Bowling Score"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_8dp">


                        <Spinner
                            android:id="@+id/bowlerspinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:entries="@array/status"
                            android:gravity="center"
                            android:padding="@dimen/_5dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:background="@color/gray" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <ImageView
                            android:id="@+id/wcket1"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/boldwick"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/wcket2"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/caughtwickt"
                            tools:ignore="VectorDrawableCompat" />


                        <ImageView
                            android:id="@+id/wcket3"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/runout"
                            tools:ignore="VectorDrawableCompat" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <ImageView
                            android:id="@+id/wcket4"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/stuimpwict"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/wcket5"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_cricket"
                            tools:ignore="VectorDrawableCompat" />


                        <ImageView
                            android:id="@+id/wcket6"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/_5dp"
                            app:srcCompat="@drawable/ic_cricket"
                            tools:ignore="VectorDrawableCompat" />


                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.kredivation.aakhale.components.ASTButton
        android:id="@+id/continuebtn"
        android:layout_width="@dimen/_190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/button_login"
        android:gravity="center"
        android:padding="@dimen/_5dp"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textSize="@dimen/_14dp" />
</LinearLayout>