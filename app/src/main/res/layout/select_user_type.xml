<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SelectUserTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/headerbg">


        <com.kredivation.aakhale.components.ASTTextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="@dimen/_14dp" />


        <com.kredivation.aakhale.components.ASTTextView
            android:id="@+id/login"
            android:layout_width="@dimen/_250dp"
            android:layout_height="@dimen/_35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonwhite"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:text="Login"
            android:textColor="@color/orange"
            android:textSize="@dimen/_14dp" />


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.kredivation.aakhale.components.ASTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/light_grey"
                android:elevation="@dimen/_5dp"
                android:padding="@dimen/_8dp"
                android:text="You are joining us as.."
                android:textColor="@color/black"
                android:textSize="@dimen/_14dp" />


            <com.kredivation.aakhale.components.ASTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_8dp"
                android:text="Select your area"
                android:textColor="@color/orange"
                android:textSize="@dimen/_14dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/araelist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <com.kredivation.aakhale.components.ASTButton
        android:id="@+id/continuebtn"
        android:layout_width="@dimen/_190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/button_login"
        android:gravity="center"
        android:padding="@dimen/_5dp"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textSize="@dimen/_14dp" />


</LinearLayout>