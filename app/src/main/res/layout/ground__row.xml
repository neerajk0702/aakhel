<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_6dp"
    app:cardElevation="@dimen/_5dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kredivation.aakhale.components.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="@dimen/_90dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5dp"
            android:layout_weight=".2"
            android:src="@drawable/p4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stadiunName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:textSize="@dimen/_12dp"
                    android:textStyle="bold" />

                <com.kredivation.aakhale.components.ASTButton
                    android:id="@+id/avilableTxt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="@drawable/round_boder_green"
                    android:text="Available"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3dp"
                android:textSize="@dimen/_12dp" />

            <TextView
                android:id="@+id/capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12dp" />


            <TextView
                android:id="@+id/addressTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12dp" />

        </LinearLayout>


    </LinearLayout>


</android.support.design.card.MaterialCardView>