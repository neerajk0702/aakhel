<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_100dp"
        android:padding="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardElevation="@dimen/_5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.kredivation.aakhale.components.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:layout_weight=".2"
                    android:src="@drawable/tropy1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida Teams"
                        android:textSize="@dimen/_14dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/teamName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UP"
                        android:textSize="@dimen/_12dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:id="@+id/ratingTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="*****"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_20dp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightRed2"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="WON:"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/wonMatch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="25"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="Matches:"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/matches"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="99"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="tournament:"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/fourTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="Challange:"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/sixTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>