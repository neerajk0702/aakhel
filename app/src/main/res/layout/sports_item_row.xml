<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_6dp"
    app:cardElevation="@dimen/_4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_3dp">

            <com.kredivation.aakhale.components.CircleImageView
                android:id="@+id/matchPerview"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:src="@drawable/ic_cricket_player" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_3dp">

            <TextView
                android:id="@+id/teamneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:text=""
                android:textColor="@color/secondry_txt_color"
                android:textSize="@dimen/_10dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>