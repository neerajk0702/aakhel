<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_70dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_6dp"
    app:cardElevation="@dimen/_4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/matchPerview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:minWidth="@dimen/_80dp"
            android:minHeight="@dimen/_30dp"
            android:src="@drawable/ic_cricket_player" />

        <TextView
            android:id="@+id/teamneName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".8"
            android:text="Crickect"
            android:textColor="@color/black"
            android:textSize="@dimen/_12dp"
            android:textStyle="bold" />


    </LinearLayout>

</android.support.v7.widget.CardView>