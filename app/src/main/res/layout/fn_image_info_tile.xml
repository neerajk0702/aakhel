<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hwapp="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    hwapp:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kredivation.aakhale.components.ASTImageView
            android:id="@+id/centerimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_45dp"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginRight="@dimen/_45dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:contentDescription="@string/app_name"
            android:visibility="visible" />

        <com.kredivation.aakhale.components.ASTImageView
            android:id="@+id/topimage"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_5dp"
            android:contentDescription="@string/app_name"
            android:gravity="center" />


        <com.kredivation.aakhale.components.ASTTextView
            android:id="@+id/lefticon"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:gravity="center"
            android:text="@string/icon_prev"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_14dp"
            android:textStyle="normal"
            android:visibility="visible" />

        <com.kredivation.aakhale.components.ASTTextView
            android:id="@+id/righticon"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10dp"
            android:gravity="center"
            android:text="@string/icon_next"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_14dp"
            android:textStyle="normal"
            android:visibility="visible" />


        <android.support.v7.widget.CardView
            android:id="@+id/totalpageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:gravity="center"
            android:minWidth="@dimen/_40dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingTop="@dimen/_5dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingBottom="@dimen/_5dp"
            hwapp:cardCornerRadius="@dimen/_14dp"
            hwapp:cardElevation="@dimen/_2dp"
            hwapp:cardUseCompatPadding="true">

            <com.kredivation.aakhale.components.ASTTextView
                android:id="@+id/totalpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="@dimen/_40dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingTop="@dimen/_5dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingBottom="@dimen/_5dp"
                android:textSize="@dimen/_12dp"
                android:textStyle="bold"
                android:visibility="visible" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.kredivation.aakhale.components.ASTTextView
                android:id="@+id/footerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.kredivation.aakhale.components.ASTTextView
                android:id="@+id/footerSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_1dp"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>