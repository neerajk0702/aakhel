<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience :"
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ExperienceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Years"
                android:textSize="7pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batting: "
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/OdieTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Right hand Batting"
                android:textSize="@dimen/_12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bowling: "
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/boloingTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show left arm bowler"
                android:textSize="@dimen/_12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role: "
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/roleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Head Coach"
                android:textSize="@dimen/_12dp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:padding="@dimen/_5dp"
        android:text="At Glance"
        android:textColor="@color/black"
        android:textSize="@dimen/_14dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="@dimen/_110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:background="@drawable/edittextround"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">


                    <TextView
                        android:id="@+id/countTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="22"
                        android:textAlignment="center"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nmae"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="Tournament"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:background="@drawable/edittextround"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">


                    <TextView
                        android:id="@+id/countTable1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="22"
                        android:textAlignment="center"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nmae1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="Match"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:background="@drawable/edittextround"
                    android:orientation="vertical"
                    android:padding="@dimen/_5dp">


                    <TextView
                        android:id="@+id/countTable2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nmae2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="Teams"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </HorizontalScrollView>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:padding="@dimen/_5dp"
        android:text="Sports"
        android:textColor="@color/black"
        android:textSize="@dimen/_14dp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/sportsgridView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_100dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:focusable="true"
        android:minHeight="@dimen/_90dp"
        android:gravity="center"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />


</LinearLayout>