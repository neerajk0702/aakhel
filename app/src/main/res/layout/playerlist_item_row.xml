<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_70dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_6dp"
    app:cardElevation="@dimen/_5dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="@dimen/_70dp"
        android:orientation="horizontal">

        <com.kredivation.aakhale.components.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_margin="@dimen/_3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginTop="@dimen/_4dp"
                android:text=""
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginTop="@dimen/_4dp"
                android:text=""
                android:textColor="@color/secondry_txt_color"
                android:textSize="@dimen/_12dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginTop="@dimen/_2dp"
                android:text=""
                android:textColor="@color/secondry_txt_color"
                android:textSize="@dimen/_12dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:text="Approved"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="@dimen/_12dp" />
        </LinearLayout>


    </LinearLayout>
</android.support.design.card.MaterialCardView>
