<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SelectUserTypeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="My Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16dp" />


            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130dp"
                    android:background="@drawable/headerbg"
                    android:orientation="vertical">


                    <com.kredivation.aakhale.components.CircleImageView
                        android:id="@+id/profileImg"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_40dp"
                        android:layout_weight="1"
                        android:elevation="@dimen/_10dp"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/ic_user" />
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Player Name"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unique_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Email Id: "
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/emailid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="30"
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Mobile :"
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Mobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="10 Years"
                            android:textSize="@dimen/_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Role: "
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/role"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text=""
                            android:textSize="@dimen/_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="player Role: "
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/player_role"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text=""
                            android:textSize="@dimen/_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="experience : "
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/experience"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text=""
                            android:textSize="@dimen/_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Fee per match : "
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fee_per_match_day"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text=""
                            android:textSize="@dimen/_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Address : "
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text=""
                            android:textSize="@dimen/_12dp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:padding="@dimen/_5dp"
                    android:text="At Glance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="@dimen/_110dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5dp"
                                android:background="@drawable/edittextround"
                                android:orientation="vertical"
                                android:padding="@dimen/_5dp">


                                <TextView
                                    android:id="@+id/countTable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:text="22"
                                    android:textAlignment="center"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/_16dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/nmae"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:text="Tournament"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_16dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_110dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5dp"
                                android:background="@drawable/edittextround"
                                android:orientation="vertical"
                                android:padding="@dimen/_5dp">


                                <TextView
                                    android:id="@+id/countTable1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:text="22"
                                    android:textAlignment="center"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/_16dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/nmae1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:text="Match"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_16dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_110dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5dp"
                                android:background="@drawable/edittextround"
                                android:orientation="vertical"
                                android:padding="@dimen/_5dp">


                                <TextView
                                    android:id="@+id/countTable2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:text="5"
                                    android:textAlignment="center"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/_16dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/nmae2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:text="Teams"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_16dp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>


                    </HorizontalScrollView>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:padding="@dimen/_5dp"
                    android:text="Team Information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/teamInfoLayoutView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:text="Users Sports"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/userSsportsLayoutView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="vertical" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>